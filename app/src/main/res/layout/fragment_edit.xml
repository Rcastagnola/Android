<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="#38ffffff"
            android:drawablePadding="20dp"
            android:hint="Nombre"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/edit_lastname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/edit_name"
            android:background="#38ffffff"
            android:drawablePadding="20dp"
            android:hint="Apellido"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_position"
            android:layout_below="@id/edit_lastname"
            android:background="#38ffffff"
            android:hint="Posicion"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:padding="7dp"
            android:drawablePadding="20dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_number"
            android:layout_below="@id/edit_lastname"
            android:background="#38ffffff"
            android:hint="Numero"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:layout_toEndOf="@+id/edit_position"
            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_photo"
            android:layout_below="@id/edit_number"
            android:background="#38ffffff"
            android:hint="URL Foto"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_height"
            android:layout_below="@id/edit_photo"
            android:background="#38ffffff"
            android:hint="Altura"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_age"
            android:layout_below="@id/edit_photo"
            android:background="#38ffffff"
            android:hint="Edad"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:layout_toEndOf="@+id/edit_height"
            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_date"
            android:layout_below="@id/edit_age"
            android:background="#38ffffff"
            android:hint="Fecha de Nacimiento"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_nationality"
            android:layout_below="@id/edit_date"
            android:background="#38ffffff"
            android:hint="Nacionalidad"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_contract"
            android:layout_below="@id/edit_nationality"
            android:background="#38ffffff"
            android:hint="Vencimiento contrato"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_price"
            android:layout_below="@id/edit_contract"
            android:background="#38ffffff"
            android:hint="Valor Actual"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btncancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_price"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#780101"
            android:text="CANCELAR"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnconfirm"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btncancel"
            android:layout_marginStart="180dp"
            android:backgroundTint="#780101"
            android:text="CONFIRMAR"
            android:textColor="@color/white"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>