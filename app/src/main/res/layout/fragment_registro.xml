<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registro"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:padding="16dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_username"
            android:background="#38ffffff"
            android:hint="Nombre de usuario"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_password"
            android:layout_below="@id/register_username"
            android:background="#38ffffff"
            android:hint="Contraseña"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_repassword"
            android:layout_below="@id/register_password"
            android:background="#38ffffff"
            android:hint="Reingrese contraseña"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_name"
            android:layout_below="@id/register_repassword"
            android:background="#38ffffff"
            android:hint="Nombre"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_lastname"
            android:layout_below="@id/register_name"
            android:background="#38ffffff"
            android:hint="Apellido"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_email"
            android:layout_below="@id/register_lastname"
            android:background="#38ffffff"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="7dp"

            android:drawablePadding="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registercancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_email"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#780101"
            android:text="CANCELAR"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerconfirm"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/registercancel"
            android:layout_marginStart="180dp"
            android:backgroundTint="#780101"
            android:text="CONFIRMAR"
            android:textColor="@color/white"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>