<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:padding="16dp">


        <TextView
            android:id="@+id/user_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Tus Datos"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_datos"
            android:layout_marginTop="40dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/user_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/user_name"
            android:text="Apellido"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/user_lastname"
            android:text="Usuario"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/user_username"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/user_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_email"
            android:layout_marginTop="20dp"
            android:backgroundTint="#780101"
            android:text="EDITAR INFORMACION"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/user_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_edit"
            android:layout_marginTop="20dp"
            android:backgroundTint="#780101"
            android:text="CAMBIAR CONTRASEÃ‘A"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/user_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#780101"
            android:text="CERRAR SESION"
            android:layout_below="@id/user_change"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>