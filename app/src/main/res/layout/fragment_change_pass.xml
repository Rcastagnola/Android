<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/changePass"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/menu_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Cambiar Contrase単a"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/change_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/menu_change"
            android:background="#38ffffff"
            android:drawablePadding="30dp"
            android:hint="Contrase単a Actual"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_new_pass"
            android:layout_below="@id/change_old_pass"
            android:background="#38ffffff"
            android:hint="Contrase単a Nueva"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:padding="7dp"
            android:drawablePadding="30dp"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_new_repass"
            android:layout_below="@id/change_new_pass"
            android:background="#38ffffff"
            android:hint="Reingrese Contrase単a Nueva"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:padding="7dp"
            android:drawablePadding="30dp"
            android:layout_centerHorizontal="true"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_cancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_new_repass"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#780101"
            android:text="CANCELAR"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_confirm"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_change_cancel"
            android:layout_marginStart="180dp"
            android:backgroundTint="#780101"
            android:text="CONFIRMAR"
            android:textColor="@color/white"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>