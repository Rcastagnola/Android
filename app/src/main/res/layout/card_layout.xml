<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#0D0B0E"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    card_view:strokeColor="@color/white"
    card_view:strokeWidth="@dimen/cardview_compat_inset_shadow">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/card_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/white"
            android:id="@+id/card_name"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/card_photo"
            android:layout_toRightOf="@+id/card_photo"
            android:layout_alignParentTop="true"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textColor="@color/white"
            android:id="@+id/card_lastname"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/card_name"
            android:layout_toRightOf="@+id/card_name"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posicion"
            android:textColor="@color/white"
            android:id="@+id/card_position"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/card_photo"
            android:layout_toRightOf="@+id/card_photo"
            android:layout_below="@+id/card_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero"
            android:textColor="@color/white"
            android:id="@+id/card_number"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/text_position"
            android:layout_toRightOf="@+id/text_position"
            android:layout_below="@+id/card_position"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂº: "
            android:textColor="@color/white"
            android:id="@+id/text_position"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/card_photo"
            android:layout_toRightOf="@+id/card_photo"
            android:layout_below="@+id/card_position"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad"
            android:textColor="@color/white"
            android:id="@+id/card_age"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/text_age"
            android:layout_toRightOf="@+id/text_age"
            android:layout_below="@+id/card_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            android:textColor="@color/white"
            android:id="@+id/text_age"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/card_photo"
            android:layout_toRightOf="@+id/card_photo"
            android:layout_below="@+id/card_number"/>

    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>